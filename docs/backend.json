
{
    "entities": {
      "UserProfile": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "User Profile",
        "description": "Represents a user's profile in the application.",
        "type": "object",
        "properties": {
          "uid": {
            "type": "string",
            "description": "The user's unique ID from Firebase Authentication."
          },
          "displayName": {
            "type": "string",
            "description": "The user's display name."
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "The user's email address."
          },
          "photoURL": {
            "type": "string",
            "format": "uri",
            "description": "URL of the user's profile picture."
          },
          "provider": {
            "type": "string",
            "description": "The authentication provider (e.g., 'google.com')."
          },
          "points": {
            "type": "number",
            "description": "Total points earned by the user."
          },
          "level": {
            "type": "number",
            "description": "The user's current level."
          },
          "referralCode": {
            "type": "string",
            "description": "The unique code for referring other users."
          },
          "referredBy": {
            "type": ["string", "null"],
            "description": "The UID of the user who referred this user."
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp of when the user account was created."
          },
          "lastLogin": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp of the user's last login."
          },
          "totalLogins": {
            "type": "number",
            "description": "A count of the total number of times the user has logged in."
          }
        },
        "required": [
          "uid",
          "displayName",
          "email",
          "provider",
          "points",
          "level",
          "referralCode",
          "createdAt",
          "lastLogin",
          "totalLogins"
        ]
      }
    },
    "auth": {
      "providers": [
        "google.com"
      ]
    },
    "firestore": {
      "structure": [
        {
          "path": "/users/{userId}",
          "definition": {
            "schema": {
              "$ref": "#/entities/UserProfile"
            },
            "description": "Stores public and private user profile data. The document ID is the same as the Firebase Auth UID.",
            "params": [
              {
                "name": "userId",
                "description": "The unique identifier for the user, matching their Firebase Auth UID."
              }
            ]
          }
        }
      ]
    }
  }
  