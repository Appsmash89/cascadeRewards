
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      // Use `exists` to safely access the document.
      let adminDocExists = exists(/databases/$(database)/documents/app-settings/global);
      if (!adminDocExists) {
        // If the doc doesn't exist, only the hardcoded guest admin is an admin.
        return request.auth.token.email == 'guest.dev@cascade.app';
      }
      
      let adminList = get(/databases/$(database)/documents/app-settings/global).data.adminEmails;
      // Ensure adminList is not null before checking `in`.
      let emailInList = adminList != null && request.auth.token.email in adminList;
      
      return request.auth.token.email == 'guest.dev@cascade.app' || emailInList;
    }

    // Function to validate the structure and types of the UserProfile document on creation.
    function isValidUserProfile(data) {
      return data.uid == request.auth.uid &&
             data.displayName is string &&
             data.email is string &&
             data.photoURL is string &&
             data.provider is string &&
             data.points == 0 &&
             data.credits == 0 &&
             data.level == 1 &&
             data.totalEarned == 0 &&
             data.referralCode is string &&
             (data.referredBy is string || data.referredBy == null) &&
             data.createdAt is timestamp &&
             data.lastLogin is timestamp &&
             data.totalLogins == 1 &&
             data.settings is map &&
             data.settings.notificationsEnabled is bool &&
             data.settings.darkMode is bool &&
             data.interests is list;
    }

    // Rules for the global app settings.
    match /app-settings/{settingId} {
        allow get: if true;
        allow list: if true;
        // Only an admin can change them.
        allow write: if isAdmin();
    }

    match /users/{userId} {
      allow get, list: if isSignedIn();
      
      allow create: if isOwner(userId) && isValidUserProfile(request.resource.data);
      allow update: if 
        // Admin can update anything.
        isAdmin() || 
        // Regular users have restricted write access.
        (isOwner(userId) &&
          // --- Immutable Fields ---
          request.resource.data.uid == resource.data.uid &&
          request.resource.data.createdAt == resource.data.createdAt &&
          request.resource.data.referralCode == resource.data.referralCode &&
          
          // --- Conditional Immutable Fields ---
          (resource.data.referredBy == null || request.resource.data.referredBy == resource.data.referredBy) &&

          // --- Points & Level Security ---
          request.resource.data.points <= resource.data.points &&
          request.resource.data.points >= 0 &&
          request.resource.data.level <= resource.data.level &&
          request.resource.data.totalEarned <= resource.data.totalEarned &&

          // --- Login Timestamp Security ---
          (request.resource.data.totalLogins == resource.data.totalLogins + 1 ||
          request.resource.data.totalLogins == resource.data.totalLogins) &&
          true
        );
        
      allow delete: if false;

      match /tasks/{taskId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }

    match /tasks/{taskId} {
        allow get, list: if isSignedIn();
        // Any signed-in user can create a task (for the "create-task" reward).
        allow create: if isSignedIn() && request.resource.data.creatorUid == request.auth.uid;
        // Only an admin or the original creator can update or delete a task.
        allow update, delete: if isAdmin() || (resource.data.creatorUid == request.auth.uid);
    }
    
    match /feedback/{feedbackId} {
      // Any signed-in user can create feedback.
      allow create: if isSignedIn();
      // Only the admin can read, list, update, or delete feedback.
      allow read, list, update, delete: if isAdmin();
    }
  }
}
