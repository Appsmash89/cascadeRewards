
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Check if the user is the specific hardcoded guest user for dev purposes
    function isDevGuest() {
      return request.auth.token.email == 'guest.dev@cascade.app';
    }

    // Function to validate the structure and types of the UserProfile document.
    function isValidUserProfile(data) {
      return data.uid == request.auth.uid &&
             data.displayName is string &&
             data.email is string &&
             data.photoURL is string &&
             data.provider is string &&
             data.points is number &&
             data.credits is number &&
             data.level is number &&
             data.referralCode is string &&
             (data.referredBy is string || data.referredBy == null) &&
             data.createdAt is timestamp &&
             data.lastLogin is timestamp &&
             data.totalLogins is number && data.totalLogins > 0 &&
             data.settings is map &&
             data.settings.notificationsEnabled is bool &&
             data.settings.darkMode is bool;
    }
    
    match /users/{userId} {
      allow get: if isOwner(userId) || isDevGuest(); // Admin can read user profiles
      allow list: if isDevGuest(); // Admin can list users
      allow create: if isOwner(userId) && isValidUserProfile(request.resource.data);
      allow update: if (isOwner(userId) &&
                       request.resource.data.uid == resource.data.uid &&
                       request.resource.data.createdAt == resource.data.createdAt) ||
                       isDevGuest(); // Admin can update user docs (for points)
      allow delete: if false;

      // Rules for the user's tasks subcollection
      match /tasks/{taskId} {
        // READ: A user can read their own task list, admin can read anyone's.
        allow get, list: if isOwner(userId) || isDevGuest();
        
        // CREATE: A user can create their own task entries (on first start). Admin can also.
        allow create: if isOwner(userId) || isDevGuest();
        
        // UPDATE: Allow if user is owner and changing status to 'in-progress' OR if user is admin.
        allow update: if (isOwner(userId) && request.resource.data.status == 'in-progress' && resource.data.status == 'available') || isDevGuest();
                         
        // DELETE: The dev guest can delete user task entries.
        allow delete: if isDevGuest();
      }
    }

    // Rules for the global tasks collection
    match /tasks/{taskId} {
        // READ: Any signed-in user can read the master list of tasks.
        allow get, list: if isSignedIn();

        // WRITE: Only allow the special dev guest account to manage tasks.
        allow write: if isDevGuest();
    }
  }
}
