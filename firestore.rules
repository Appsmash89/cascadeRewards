
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Check if the user is the specific hardcoded guest user for dev purposes
    function isDevGuest() {
      return request.auth.token.email == 'guest.dev@cascade.app';
    }

    // Function to validate the structure and types of the UserProfile document on creation.
    function isValidUserProfile(data) {
      return data.uid == request.auth.uid &&
             data.displayName is string &&
             data.email is string &&
             data.photoURL is string &&
             data.provider is string &&
             data.points == 0 &&
             data.credits == 0 &&
             data.level == 1 &&
             data.totalEarned == 0 &&
             data.referralCode is string &&
             (data.referredBy is string || data.referredBy == null) &&
             data.createdAt is timestamp &&
             data.lastLogin is timestamp &&
             data.totalLogins == 1 &&
             data.settings is map &&
             data.settings.notificationsEnabled is bool &&
             data.settings.darkMode is bool &&
             data.interests is list;
    }

    match /users/{userId} {
      allow get: if isOwner(userId) || isDevGuest();
      allow list: if isDevGuest();
      allow create: if isOwner(userId) && isValidUserProfile(request.resource.data);
      allow update: if 
        // Admin can update anything.
        isDevGuest() || 
        // Regular users have very restricted write access.
        (isOwner(userId) &&
          // --- Immutable Fields ---
          // These fields cannot be changed by the user after creation.
          request.resource.data.uid == resource.data.uid &&
          request.resource.data.createdAt == resource.data.createdAt &&
          request.resource.data.referralCode == resource.data.referralCode &&
          request.resource.data.referredBy == resource.data.referredBy &&
          
          // --- Points & Level Security ---
          // User cannot increase their own points, totalEarned, or level.
          request.resource.data.totalEarned == resource.data.totalEarned &&
          request.resource.data.level == resource.data.level &&
          // They can only DECREASE points (e.g., redeeming rewards), but not go below 0.
          request.resource.data.points >= 0 &&
          request.resource.data.points <= resource.data.points &&

          // --- Login Timestamp Security ---
          // if lastLogin is being updated, it must be the server time.
          (!('lastLogin' in request.resource.data) || request.resource.data.lastLogin == request.time) &&
          // if totalLogins is being updated, it can only be incremented by 1.
          (!('totalLogins' in request.resource.data) || request.resource.data.totalLogins == resource.data.totalLogins + 1) &&

          // --- Modifiable Fields ---
          // This uses the `keys()` method to ensure no other fields are being changed.
          // The request can only contain these modifiable fields or the ones explicitly handled above.
          request.resource.data.keys().hasOnly(['uid', 'displayName', 'email', 'photoURL', 'provider', 'points', 'credits', 'level', 'totalEarned', 'referralCode', 'referredBy', 'createdAt', 'lastLogin', 'totalLogins', 'settings', 'interests'])
        );
        
      allow delete: if false;

      // Rules for the user's tasks subcollection
      match /tasks/{taskId} {
        allow get, list: if isOwner(userId) || isDevGuest();
        allow create: if isOwner(userId) || isDevGuest();
        allow update: if (isOwner(userId) && 
                            (request.resource.data.status == 'in-progress' && resource.data.status == 'available')
                         ) || isDevGuest();
        allow delete: if isDevGuest();
      }
    }

    // Rules for the global tasks collection
    match /tasks/{taskId} {
        allow get, list: if isSignedIn();
        allow write: if isDevGuest();
    }

    // Rules for the global app settings
    match /app-settings/{settingId} {
        allow get: if true;
        allow write: if isDevGuest();
    }
  }
}
