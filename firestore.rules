
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Function to validate the structure and types of the UserProfile document.
    function isValidUserProfile(data) {
      return data.uid == request.auth.uid &&
             data.displayName is string &&
             data.email is string &&
             data.photoURL is string &&
             data.provider is string &&
             data.points is number &&
             data.credits is number &&
             data.level is number &&
             data.referralCode is string &&
             (data.referredBy is string || data.referredBy == null) &&
             data.createdAt is timestamp &&
             data.lastLogin is timestamp &&
             data.totalLogins is number && data.totalLogins > 0 &&
             data.settings is map &&
             data.settings.notificationsEnabled is bool &&
             data.settings.darkMode is bool;
    }
    
    match /users/{userId} {
      // READ: A user can only read their own document.
      allow get: if isOwner(userId);
      
      // LIST: No one can list all users.
      allow list: if false;

      // CREATE: A user can only create their own document.
      // The incoming data must match the UID and have the correct schema.
      allow create: if isOwner(userId) && isValidUserProfile(request.resource.data);

      // UPDATE: A user can only update their own document.
      // Critical fields like uid and createdAt must not be changed.
      allow update: if isOwner(userId) &&
                     request.resource.data.uid == resource.data.uid &&
                     request.resource.data.createdAt == resource.data.createdAt;
                     
      // DELETE: Deleting user documents is disallowed to maintain data integrity.
      allow delete: if false;
    }
  }
}
